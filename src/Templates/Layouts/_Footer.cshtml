@{
    string assetFolder = MixCmsHelper.GetAssetFolder(ViewBag.culture);
    var cates = await MixCmsHelper.GetNavigation("footer", ViewBag.culture, Url);
}
<!-- Footer Section -->
  <footer class="bg-dark">
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
        <a class="navbar-brand" href="#">
          <img src="@assetFolder/assets/images/agency-landing/shards-logo-white.svg" class="mr-2" alt="Shards - Agency Landing Page">
          Mixcore Agency</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            @if(cates!=null){
              foreach(var item in cates){
                <li class="nav-item">
                    <a class="nav-link" href="@item.Uri">@item.Title <span class="sr-only">(current)</span></a>
                </li>
              }
            }
          </ul>
        </div>
      </div>
    </nav>
    <div class="container py-3"><p class="text-muted text-right small">Powered by <a href="https://mixcore.org" class="" target="_blank" alt="Top Open Source ASP.NET Core Content Management System CMS - Open Source Dotnet Core Headless and Decoupled CMS -
    Open Source Enterprise CMS - Mixcore CMS">Mixcore CMS</a>.</p></div>
  </footer>
  <!-- / Footer Section -->
